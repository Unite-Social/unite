<div id="message-<%= message.id %>">
  <small>
  <% if message.user.photo.key? %>
  <%= cl_image_tag message.user.photo.key, class:"avatar-bordered" %>
  <% else %>
  <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQxksg3HzNZNRNl0v0DAQUtrebHt5cyhy9ldQ&s' %>"
   class="avatar-bordered" />
  <% end %>
    <strong><%= message.user.name %></strong>
    <i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
  </small>
  <p><%= message.content %></p>
</div>
