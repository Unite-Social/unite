<div class="background">
  <div class="container py-5 h-100">
    <div class="d-flex justify-content-center align-items-center h-100 w-100">
      <div class="d-flex flex-column align-items-center w-100" style="max-width: 540px;">
        <div class="card-login bg-dark text-white w-100" style="border-radius: 1rem;">
          <div class="card-body p-2 text-center">

            <div class="mb-md-5 mt-md-4 pb-5">
              <h2 class="fw-bold mb-5 text-uppercase text-white">Login</h2>

              <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-inputs">
                <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
                <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
              </div>

              <div class="form-actions mt-5">
                <%= f.button :submit, "Log in", class:"btn btn-outline-light btn-lg px-5" %>
              </div>
              <% end %>
              <%= link_to "Forgot password?", new_user_password_path, class:"small mb-5 pb-lg-2 text-white" %>

              <div class="d-flex justify-content-center text-center mt-4 pt-1">
                <a href="#!" class="text-white"><i class="fab fa-facebook-f fa-lg"></i></a>
                <a href="#!" class="homeBtn"><i class="fa-brands fa-github fa-lg mx-4 px-2"></i></a>
                <a href="#!" class="text-white"><i class="fab fa-google fa-lg"></i></a>
              </div>
            </div>
          </div>
        </div>
        <div>
          <p>Don't have an account? <%= link_to "Sign Up", new_user_registration_path, class:"text-white fw-bold" %></p>
        </div>
      </div>
    </div>
  </div>
</div>
