<div class="sidebar" data-sidebar-target='toggle'>
  <button class="sidebar__toggle" type="button" data-action="click->sidebar#open" aria-label="Toggle sidebar"></button>

  <%= image_tag "unite.jpeg" %>
  <div class="d-flex flex-grow-1">
    <div class="d-flex flex-column w-100" >
      <p class="fs-4 mx-4"> <% if user_signed_in? %>
  <%= current_user.email %>
  <% else %>
  <h1></h1>
  <% end %></p>
      <ul class="list-unstyled">
        <div class="menu-item">
          <i class="fa-solid fa-house"></i> <%= link_to "Home", root_path %>
        </div>
        <div class="menu-item">
          <i class="fa-solid fa-address-card"></i> <%= link_to "About us", about_path %>
        </div>
        <div class="menu-item">
          <i class="fa-solid fa-group-arrows-rotate"></i> <%= link_to "Social Movements", movements_path %>
        </div>
        <% if user_signed_in? %>
        <div class="menu-item">
          <i class="fa-solid fa-calendar-days"></i> <%= link_to "Chatroom", chatroom_path(Chatroom.last) %>
        </div>
        <% end %>
      </ul>
      <div class="mt-auto">
      <% if user_signed_in? %>
        <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete} %>
      <% else %>
        <button type="button" class="menu-session w-100" onclick="window.location.href='<%= new_user_session_path %>'">Login</button>
      <%end %>
      </div>
    </div>
  </div>
</div>
