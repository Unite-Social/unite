<div class="d-flex flex-column w-100">
  <div class="banner mb-3" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png);">
    <div class="container d-flex justify-content-center">
      <h1><%= @movement.name %></h1>
    </div>
  </div>
  <div class="mx-5">
    <p><%= @movement.description %></p>
    <%= "-"*110 %>
    <p><i class="fa-solid fa-clock"></i> <%= "#{@movement.date.hour}:#{@minutes}" %></p>
    <%= "-"*110 %>
    <p>Address: <%= "#{@movement.address}" %></p>
    <%= "-"*110 %>
    <p><i class="fa-solid fa-phone"></i> <%= link_to "Contact", "#{@movement.contact}" %></p>
    <%= link_to "confirm", movement_participants_path(@movement), data: {turbo_method: :post, turbo_confirm: "Tem certeza?"} %>
  </div>

  <% if policy(@movement).edit? %>
    <%= link_to "Edit this movement", edit_movement_path(@movement) %>
  <% end %>
  <!-- [...] -->
  <%= button_to "Destroy this movement", @movement, method: :delete if policy(@movement).destroy? %>
</div>
