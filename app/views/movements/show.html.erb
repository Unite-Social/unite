<div class="d-flex flex-column w-100">
  <div class="banner mb-3" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png);">
    <div class="container d-flex justify-content-center">
      <h1 class="text-white"><%= @movement.name %></h1>
    </div>
  </div>
  <div class="row">
    <div class="col-8">
      <div class="ms-3">
        <p><%= @movement.description %></p>
        <%= "-"*50 %>
        <p><i class="fa-solid fa-clock"></i> <%= "#{@movement.date.hour}:#{@minutes}" %></p>
        <p><i class="fa-solid fa-calendar-days"></i> <%= "#{@movement.date.day}/#{@month}/#{@movement.date.year}" %></p>
        <%= "-"*50 %>
        <p>Address: <%= "#{@movement.address}" %></p>
        <%= "-"*50 %>
        <p><i class="fa-solid fa-phone"></i> <%= link_to "Contact", "#{@movement.contact}" %></p>
        <%= link_to "confirm", movement_participants_path(@movement), data: {turbo_method: :post, turbo_confirm: "Tem certeza?"}, class: "btn btn-primary" %>
        <%= link_to "return", movements_path, class: "btn btn-primary ms-3" %>
      </div>
    </div>

    <div class="col-4 text-end px-4">
      <% if policy(@movement).edit? %>
        <%= link_to "Edit this movement", edit_movement_path(@movement), class: "btn btn-primary mb-3" %>
      <% end %>
      <!-- [...] -->
      <%= button_to "Destroy this movement", @movement, method: :delete if policy(@movement).destroy? %>
    </div>

  </div>

</div>
