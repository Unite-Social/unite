<ul class="list-group h-25 flex-grow-1 overflow-auto">
  <%= link_to "Start a movement", new_movement_path , class:"list-link btn btn-primary" if policy(Movement).new? %>
  <% @movements.each do |movement| %>
    <%= link_to zoom_movement_path(movement) do %>
      <div>
        <li class="d-flex flex-row list-group-item">
          <%= image_tag "unite.jpeg", class:"list-img" %>
          <div class="w-100">
            <div class="d-flex justify-content-between">
                <div>
                  <%= movement.name %>
                </div>
                <div>
                  <%= movement.date %>
                </div>
            </div>
            <div class="d-flex justify-content-between">
              <div>
                <%= movement.rewards %>
                </div>
                <div>
                <%= movement.address %>
              </div>
            </div>
          </div>
        </li>
      </div>
    <% end %>
  <% end %>
</ul>
