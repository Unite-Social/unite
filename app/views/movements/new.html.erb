<div class="container w-50 my-5">
<h1> New movement </h1>
 <%= simple_form_for [@movement] do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :photo, as: :file %>
            <%= f.input :name,
                        required: true,
                        autofocus: true %>
            <%= f.input :date,
                        required: true,
                        autofocus: true %>
            <%= f.input :rewards,
                        required: true,
                        autofocus: true %>
            <%= f.input :description,
                        required: true,
                        autofocus: true %>
            <%= f.input :address,
                        required: true,
                        autofocus: true %>
            <%= f.input :contact,
                        required: true,
                        autofocus: true %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Create the social event", class:"btn btn-primary w-100" %>
          </div>
        <% end %>
        <%= link_to "Return", movements_path %>
</div>
